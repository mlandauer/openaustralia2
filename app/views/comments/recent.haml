.stripe-side
  .main
    %h2 Recent comments
    %h3 &nbsp;
    .block#recentcomments
      %h4 Most recent comments
      .blockbody
        %ul
          - @comments.each_with_index do |comment, index|
            %li
              %a(id="c#{index + 1}" name="c#{index + 1}")>
              %strong #{comment.user.name}:
              = comment.body
              %small (#{time_ago_in_words(comment.posted)} ago)
              %br
              %a(href="/debate/?id=#{comment.speech.id}#c#{comment.id}") Read comment
              \|
              %a(href="/user/?u=#{comment.user.id}" title="See more information about this user") All by this user
    / end .block
  / end .main
  .sidebar
    &nbsp;
  / end .sidebar
  .break
