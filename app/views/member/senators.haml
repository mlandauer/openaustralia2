.main
  %h2= @title
  %h3 &nbsp;
  %table.people{ :cellspacing => "0", :border => "0", :cellpadding => "4", :width => "90%" }
    %thead
      %th Photo
      %th= link_to "Name", :o => "n", :trailing_slash => true
      %th= link_to "Party", :o => "p", :trailing_slash => true
      %th= link_to "State", :o => "c", :trailing_slash => true
      %th Positions
    %tbody
      - @members.each do |m|
        - row_class = cycle("row-1", "row-2")
        %tr
          %td.row
            %img.portrait{ :src => "/images/mps/#{m.person_id}.jpg", :alt => "" }>
          %td{ :class => row_class }
            %a{ :href => "/senator/#{m.first_name.downcase}_#{m.last_name.downcase}/#{m.constituency.downcase}" }>= m.name
          %td{ :class => row_class }= m.party
          %td{ :class => row_class }= m.constituency
          %td{ :class => row_class }= nbsp_if_empty(m.current_minister_positions.join('<br>'))
/ end .main
.sidebar
  = render :partial => "spreadsheet"
  = render :partial => "shared/donate"
/ end .sidebar
